@namespace LiveAI.FastBlazor.Components
@inherits Base.FluentComponentBase
@using LiveAI.FastBlazor.Helpers
<fluent-button appearance="@Appearance.ToAttributeValue()"
               disabled="@Disabled"
               autofocus="@Autofocus"
               onclick="@OnClickHandler"
               class="@ClassMapper" 
               style="@StyleMapper"
               @attributes="AdditionalAttributes">
    @if (!string.IsNullOrWhiteSpace(IconStart))
    {
        <FluentIcon Icon="@IconStart" Size="@IconSize.Small" slot="@(ChildContent != null ? "start" : "")" />
    }
    @ChildContent
    @if (!string.IsNullOrWhiteSpace(IconEnd))
    {
        <FluentIcon Icon="@IconEnd" Size="@IconSize.Small" slot="@(ChildContent != null ? "end" : "")"  />
    }
</fluent-button>